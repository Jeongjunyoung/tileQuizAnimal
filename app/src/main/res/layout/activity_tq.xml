<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tqani.apps.obg.activity.TQActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/pause_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#c4618c5d"
        android:orientation="vertical"
        android:gravity="center">
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:gravity="right">
            <ImageButton
                android:id="@+id/pause_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_close"/>
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/text_pause"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tq_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d31c351f"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/text_record">
                </LinearLayout>
                <TextView
                    android:id="@+id/quiz_record_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/text_score">
                </LinearLayout>
                <TextView
                    android:id="@+id/quiz_score_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_view_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_hint"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/tq_hint_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/hint_text"
                    android:textColor="#ffffff"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="18dp"/>
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SCORE"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/quiz_life1"
                    style="@style/LifeImageView"/>
                <ImageView
                    android:id="@+id/quiz_life2"
                    style="@style/LifeImageView"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/quiz_life3"
                    style="@style/LifeImageView"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d31c351f"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="5dp">
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/quiz_timer"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                app:rcProgress="0"
                app:rcSecondaryProgress="0"
                app:rcMax="100"
                app:rcRadius="10dp"
                app:rcBackgroundPadding="2dp"
                app:rcReverse="false"/>
        </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <ImageButton
                android:id="@+id/pause_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_pause"
                android:background="@android:color/transparent"/>
        </LinearLayout>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/start_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#dc8ba984"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/start_btn_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#32794d">
            <ImageButton
                android:id="@+id/start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/level_fragment"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="3"
        android:background="#b9d7b0"
        android:visibility="visible">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/tq_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#b9d7b0"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/contents1"
                    android:background="@drawable/btn_background"
                    style="@style/ContentButton"/>
                <Button
                    android:id="@+id/contents2"
                    android:background="@drawable/btn_background"
                    style="@style/ContentButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/contents3"
                    android:background="@drawable/btn_background"
                    style="@style/ContentButton"/>
                <Button
                    android:id="@+id/contents4"
                    android:background="@drawable/btn_background"
                    style="@style/ContentButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.gms.ads.AdView
        android:id="@+id/tq_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bottom_ads_unit_id">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
</LinearLayout>
</layout>